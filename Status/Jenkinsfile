dir = ' -dir ../AutomationTesting/Tests/OneSale_CloseBatch_Loop'

def init()
{
        script
        {
                bat 'python.exe ../AutomationTesting/SetupTest.py '
        }
}

def sale(size)
{
    script
    {
        for(int i= 0; i<size; ++i)
        {
                catchError(stageResult: 'FAILURE')
                {
                 max = 500
                random_num = "${Math.abs(1 + new Random().nextInt(max+1))}"
                deviceID = 1234567890
                trxID = 12345678901234
                amount = '-a' + random_num.toString()
                log = ' -lp saleLog' + i.toString() + '.LOG'
                data = ' -out saleData' + i.toString()+ '.txt'
                str = 'python.exe ../AutomationTesting/Main.py ' + ' -vp ../AutomationTesting/validation/sale0.txt ' + amount + dir + log + data + deviceID + trxID 
                bat str 

                log = ' -lp completeSaleLog' + i.toString() + '.LOG'
                data = ' -out completeSaleData' + i.toString()+ '.txt'
                str = 'python.exe ../AutomationTesting/Main.py ' + ' -vp ../AutomationTesting/validation/complete_sale.txt ' + dir + log + data + deviceID + trxID
                bat str
                }
                catchError(stageResult: 'FAILURE')
                {
                    log = ' -lp closeBatchLog' + index.toString() + '.LOG'
                    data = ' -out closeBatchData' + i.toString()+ '.txt'
                    str = 'python.exe ../AutomationTesting/Main.py ' + ' -vp ../AutomationTesting/validation/closeBatch.txt ' + dir + log + data
                    bat str
                }
        }
    }
}
pipeline {
    agent any

    stages 
    {
        stage('Init')
        {
            steps
            {
                init() 
            }
        }
        stage('sale')
        {
            steps
            {
                sale(2)
            }
        }
}
}
