ip = ' -ip 192.168.0.103'
connType = ' -t 2'
dir = ' -dir ../AutomationTesting/Tests/completion_preauth_completion'
globalVal = ' -gv ../AutomationTesting/validation/globalValidations.txt'
comPort = ' -serialPort COM6'
logsPort = ' -logsPort COM7'
baudRate = ' -baud 9600'
cur = ' -cur 975'

def init()
{
        script
        {
                bat 'python.exe ../AutomationTesting/SetupTest.py '
        }
}

def preauth()
{
        script
        {
            catchError(stageResult: 'FAILURE')
            {
                i = 0
                max = 98
                random_num = "${Math.abs(1 + new Random().nextInt(max+1))}"
                amount = '-a' + random_num.toString()
                dir = ' -dir ../AutomationTesting/Tests/completion_preauth_completion'
                log = ' -lp preauthLog' + i.toString() + '.LOG'
                data = ' -out Data' + i.toString()+ '.txt'
                str = 'python.exe ../AutomationTesting/Main.py ' + connType + ip + dir + comPort + logsPort + baudRate + cur +' -vp ../AutomationTesting/validation/preauth0.txt ' + amount + data + log
                bat str 
            }
        }
}

def preauthCompError(valPath, index)
{
    script
    {
        catchError(stageResult: 'FAILURE')
        {
            i = 0
            dir = ' -dir ../AutomationTesting/Tests/completion_preauth_completion'
            log = ' -lp preauthCompletionLog' + index.toString() + '.LOG'
            stan = ' -stan 0'
            authCode = ' -auth 000000'
            str = 'python.exe ../AutomationTesting/Main.py ' + connType + ip + dir + comPort + logsPort + baudRate + cur + log + data + valPath + stan + authCode
            bat str
        }
    }

}

def preauthComp(valPath, index)
{
    script
    {
        catchError(stageResult: 'FAILURE')
        {
            i = 0
            dir = ' -dir ../AutomationTesting/Tests/completion_preauth_completion'
            log = ' -lp preauthCompletionLog' + index.toString() + '.LOG'
            data = ' -in Data' + i.toString()+ '.txt'
            str = 'python.exe ../AutomationTesting/Main.py ' + connType + ip + dir + comPort + logsPort + baudRate + cur + log + data + ' -vp ../AutomationTesting/validation/preauthCompletion0.txt '
            bat str
        }
    }

}

def closeBatch(valPath, index)
{
    script
    {
        catchError(stageResult: 'FAILURE')
        {
            log = ' -lp closeBatchLog' + index.toString() + '.LOG'
            str = 'python.exe ../AutomationTesting/Main.py ' + connType + ip + dir + comPort + logsPort + baudRate +' -vp ' + valPath + log
            bat str
        }
    }
}


pipeline {
    agent any

    stages 
    {
        stage('Init')
        {
            steps
            {
                init() 
            }
        }

        stage('closeBatch1')
        {
            steps
            {
                        
                closeBatch('../AutomationTesting/validation/closeBatch1.txt', 1)
            }
        }

        
        stage('preauthCompletionError')
        {
            steps
            {
                preauthCompError('../AutomationTesting/validation/preauthCompletionError1.txt ', 1)
            }
        }

        stage('preauth')
        {
            steps
            {
                preauth(2)
            }
            
        }
            
        stage('preauthCompletion2')
        {
            steps
            {
                preauthComp('../AutomationTesting/validation/preauthCompletion0.txt ', 2)
            }
        }
            
        stage('closeBatch')
        {
            steps
            {
                closeBatch('../AutomationTesting/validation/closeBatch.txt', 2)
            }
        }
    }
}
